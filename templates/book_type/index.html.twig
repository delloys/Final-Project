{% extends 'base.html.twig' %}

{% block title %}BookType index{% endblock %}

{% block body %}
    <h1>BookType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book_type in book_types %}
            <tr>
                <td>{{ book_type.id }}</td>
                <td>{{ book_type.type }}</td>
                <td>
                    <a href="{{ path('app_book_type_show', {'id': book_type.id}) }}">show</a>
                    <a href="{{ path('app_book_type_edit', {'id': book_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_book_type_new') }}">Create new</a>
{% endblock %}
